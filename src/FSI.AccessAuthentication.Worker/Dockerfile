FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore FSI.AccessAuthentication.sln
RUN dotnet publish FSI.AccessAuthentication.Worker/FSI.AccessAuthentication.Worker.csproj -c Release -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/runtime:8.0
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet","FSI.AccessAuthentication.Worker.dll"]
